@using GrapheneTrace.Web.Services
@model List<PressureFrameRow>

@{
    ViewData["Title"] = "Sensor Session";
}

<div class="container my-4">
    <h2 class="fw-bold mb-3">Sensor session preview</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }

    @if (Model == null || !Model.Any())
    {
        <p class="text-muted">No frames to display.</p>
    }
    else
    {
        <p class="text-muted">
            Showing @Model.Count frame rows.
            Each row has @Model.First().Values.Length sensor values (columns).
        </p>

        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-sm align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Frame #</th>
                        <th>Max value</th>
                        <th>Average value</th>
                        <th>Raw values (first 10)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var frame in Model)
                    {
                        var max = frame.Values.Max();
                        var avg = frame.Values.Average();
                        var firstTen = string.Join(", ", frame.Values.Take(10));

                        <tr>
                            <td>@frame.FrameIndex</td>
                            <td>@max</td>
                            <td>@avg.ToString("0.0")</td>
                            <td class="text-muted small">@firstTen@((frame.Values.Length > 10) ? ", ..." : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary btn-sm mt-3">Back to sessions</a>
</div>
