@using Microsoft.AspNetCore.Http

@{
    var title = ViewData["Title"] as string ?? "Graphene Trace";

    // Safely read session values (null-safe)
    var httpContext = Context;
    var userName = httpContext?.Session?.GetString("UserName");
    var userRole = httpContext?.Session?.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Graphene Trace</title>

    <!-- Bootstrap (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <!-- Site CSS (optional; keep if you already have it) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Graphene Trace</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <!-- LEFT SIDE LINKS -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* Role-based dashboard links *@
                        @if (!string.IsNullOrEmpty(userRole))
                        {
                            if (userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Dashboard" asp-action="Admin">Admin Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Dashboard" asp-action="Clinician">Clinician Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Dashboard" asp-action="Patient">Patient Dashboard</a>
                                </li>
                            }
                            else if (userRole == "Clinician")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Dashboard" asp-action="Clinician">Clinician Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Dashboard" asp-action="Patient">Patient Dashboard</a>
                                </li>
                            }
                            else if (userRole == "Patient")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Dashboard" asp-action="Patient">My Dashboard</a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- RIGHT SIDE: LOGIN / REGISTER OR WELCOME / LOGOUT -->
                    <ul class="navbar-nav ms-auto">
                        @if (string.IsNullOrEmpty(userName))
                        {
                            <!-- Not logged in -->
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <!-- Logged in -->
                            <li class="nav-item">
                                <span class="navbar-text text-info me-3">
                                    Welcome, @userName (@userRole)
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-light border-top py-3">
        <div class="container text-muted small">
            &copy; @DateTime.UtcNow.Year Graphene Trace
        </div>
    </footer>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
