@model GrapheneTrace.Web.Controllers.DashboardController.AdminViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .stat-card {
        transition: transform .15s ease, box-shadow .15s ease;
    }
    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 .75rem 1.5rem rgba(0, 0, 0, 0.06);
    }

    .status-pill {
        padding: .15rem .5rem;
        border-radius: 999px;
        font-size: .75rem;
    }

    .status-available {
        background: #dcfce7;
        color: #166534;
    }

    .status-unavailable {
        background: #fee2e2;
        color: #991b1b;
    }

    .severity-high { background: #fee2e2; color: #b91c1c; }
    .severity-medium { background: #fef3c7; color: #92400e; }
    .severity-low { background: #e0f2fe; color: #1d4ed8; }

    .system-card {
        background: linear-gradient(135deg, #0f172a, #1f2937);
        color: #e5e7eb;
    }

    .badge-light-muted {
        background-color: #f3f4f6;
        color: #4b5563;
    }
</style>

<div class="container my-4">

    @if (TempData["AdminMessage"] != null)
    {
        <div class="alert alert-info">@TempData["AdminMessage"]</div>
    }

    <!-- TOP STATS -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Total Users</h6>
                    <h3 class="fw-bold">@Model.TotalUsers</h3>
                    <small class="text-muted">Patients, clinicians & admins</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Patients</h6>
                    <h3 class="fw-bold text-primary">@Model.TotalPatients</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Clinicians</h6>
                    <h3 class="fw-bold text-success">@Model.TotalClinicians</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card system-card border-0 shadow-sm">
                <div class="card-body">
                    <h6>System Load</h6>
                    <div class="progress mb-2" style="height: 6px;">
                        <div id="systemLoadBar" class="progress-bar bg-success" style="width: 40%;"></div>
                    </div>
                    <small id="systemLoadLabel" class="text-light">Stable</small>
                </div>
            </div>
        </div>
    </div>

    <!-- ALERT ANALYTICS -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Alerts Today</h6>
                    <h3 class="fw-bold">@Model.AlertsToday</h3>
                    <div class="d-flex gap-2 mt-2 small">
                        <span class="badge severity-high">High: @Model.HighAlerts</span>
                        <span class="badge severity-medium">Medium: @Model.MediumAlerts</span>
                        <span class="badge severity-low">Low: @Model.LowAlerts</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- TOP PATIENTS -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Top Patients by Alerts</h6>
                    @if (Model.TopPatientsByAlerts.Any())
                    {
                        <ul class="list-group list-group-flush small">
                            @foreach (var p in Model.TopPatientsByAlerts)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @p.PatientName
                                    <span class="badge bg-danger">@p.OpenAlertCount</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No active alerts.</p>
                    }
                </div>
            </div>
        </div>

        <!-- THRESHOLDS -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Alert Thresholds</h6>

                    <form asp-action="UpdateSettings" method="post" class="row g-2">
                        <div class="col-6">
                            <label class="form-label small">High Pressure Threshold</label>
                            <input type="number" name="highPressureThreshold"
                                   value="@Model.HighPressureThreshold"
                                   class="form-control form-control-sm" />
                        </div>

                        <div class="col-6">
                            <label class="form-label small">No Movement (min)</label>
                            <input type="number" name="noMovementMinutes"
                                   value="@Model.NoMovementMinutes"
                                   class="form-control form-control-sm" />
                        </div>

                        <div class="col-12 d-grid">
                            <button class="btn btn-outline-secondary btn-sm">Save settings</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- FILTERS -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Admin" class="row g-2">
                <div class="col-md-4">
                    <label class="form-label small">Search</label>
                    <input name="search" value="@Model.Search"
                           class="form-control form-control-sm" />
                </div>

                <div class="col-md-3">
                    <label class="form-label small">Role</label>
                    <select name="roleFilter" class="form-select form-select-sm">
                        <option value="All" selected="@(Model.RoleFilter == "All")">All</option>
                        <option value="Patient" selected="@(Model.RoleFilter == "Patient")">Patients</option>
                        <option value="Clinician" selected="@(Model.RoleFilter == "Clinician")">Clinicians</option>
                        <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admins</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <div class="form-check mt-4">
                        <input type="checkbox" class="form-check-input"
                               name="showInactive" value="true"
                               @(Model.ShowInactive ? "checked" : null) />
                        <label class="form-check-label small">Show inactive</label>
                    </div>
                </div>

                <div class="col-md-3 d-grid">
                    <button class="btn btn-primary btn-sm mt-4">Apply</button>
                </div>
            </form>
        </div>
    </div>

    <!-- USERS TABLES -->
    <div class="row g-4">

        <!-- PATIENTS AND CLINICIANS -->
        <div class="col-lg-7">

            <!-- PATIENTS -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Patients</h5>

                    <table class="table table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Patients)
                            {
                                <tr class="@(p.IsActive ? "" : "table-secondary")">
                                    <td>@p.FullName</td>
                                    <td>@p.Email</td>
                                    <td>
                                        @if (p.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {

                                            <span class="badge badge-light-muted">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <form asp-action="ToggleUserActive" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button class="btn btn-outline-secondary btn-sm">
                                                @(p.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>

                                        <form asp-action="DeletePatient" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button class="btn btn-outline-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }

                            @if (!Model.Patients.Any())
                            {
                                <tr><td colspan="4" class="text-muted">No matching patients.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- CLINICIANS -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Clinicians</h5>

                    <table class="table table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Available</th>
                                <th>Workload</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.Clinicians)
                            {
                                var load = Model.ClinicianWorkload.FirstOrDefault(l => l.Name == c.FullName);

                                <tr class="@(c.IsActive ? "" : "table-secondary")">
                                    <td>@c.FullName</td>
                                    <td>@c.Email</td>
                                    <td>
                                        @if (c.IsAvailable)
                                        {
                                            <span class="status-pill status-available">Yes</span>
                                        }
                                        else
                                        {

                                            <span class="status-pill status-unavailable">No</span>
                                        }
                                    </td>
                                    <td>
                                        @if (load != null)
                                        {
                                            <span class="badge bg-secondary">@load.LoadLabel (@load.UpcomingAppointments)</span>
                                        }
                                    </td>
                                    <td>
                                        <form asp-action="ToggleClinicianAvailability" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button class="btn btn-outline-secondary btn-sm">Toggle</button>
                                        </form>
                                        <form asp-action="ToggleUserActive" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button class="btn btn-outline-secondary btn-sm">
                                                @(c.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }

                            @if (!Model.Clinicians.Any())
                            {
                                <tr><td colspan="5" class="text-muted">No matching clinicians.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <!-- RIGHT SIDE: APPOINTMENTS + ALERTS + LOG -->
        <div class="col-lg-5">

            <!-- APPOINTMENTS -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Upcoming Appointments (@Model.UpcomingAppointments)</h5>

                    <div style="max-height:260px; overflow-y:auto;">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Patient</th>
                                    <th>Clinician</th>
                                    <th>Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model.Appointments)
                                {
                                    <tr>
                                        <td>@a.PatientName</td>
                                        <td>@a.ClinicianName</td>
                                        <td>@a.StartTime.ToString("dd MMM HH:mm")</td>
                                    </tr>
                                }

                                @if (!Model.Appointments.Any())
                                {
                                    <tr><td colspan="3" class="text-muted">No appointments.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- ALERTS -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Active Alerts (@Model.OpenAlerts)</h5>

                    <table class="table table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Patient</th>
                                <th>Severity</th>
                                <th>Message</th>
                                <th>Raised</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alert in Model.Alerts)
                            {
                                var sev = alert.Severity == "High"
                                ? "severity-high"
                                : alert.Severity == "Medium"
                                ? "severity-medium"
                                : "severity-low";

                                <tr>
                                    <td>@alert.PatientName</td>
                                    <td><span class="status-pill @sev">@alert.Severity</span></td>
                                    <td>@alert.Message</td>
                                    <td>@alert.RaisedAt.ToString("dd MMM HH:mm")</td>
                                    <td>
                                        <form asp-action="ResolveAlert" method="post">
                                            <input type="hidden" name="id" value="@alert.Id" />
                                            <button class="btn btn-outline-success btn-sm">Resolve</button>
                                        </form>
                                    </td>
                                </tr>
                            }

                            @if (!Model.Alerts.Any())
                            {
                                <tr><td colspan="5" class="text-muted">No active alerts.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- LOG -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Recent Admin Activity</h5>

                    @if (Model.AdminLog.Any())
                    {
                        <ul class="list-group list-group-flush small">
                            @foreach (var log in Model.AdminLog)
                            {
                                <li class="list-group-item">@log</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted small">No admin activity yet.</p>
                    }
                </div>
            </div>

        </div>
    </div>

    <!-- CSV IMPORT TOOL -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header fw-bold">Import Pressure CSV Dataset</div>
        <div class="card-body">
            <form asp-controller="DataImport" asp-action="Import" method="post" class="row g-2">
                <div class="col-md-3">
                    <label class="form-label small">Patient ID</label>
                    <input type="number" name="patientId" class="form-control form-control-sm" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label small">Dataset folder</label>
                    <input type="text" name="datasetFolder"
                           class="form-control form-control-sm"
                           placeholder="patient-1_dataset-1" required />
                </div>

                <div class="col-md-3 d-grid align-items-end">
                    <button class="btn btn-primary btn-sm">Import</button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        (function () {
            const bar = document.getElementById('systemLoadBar');
            const label = document.getElementById('systemLoadLabel');

            function updateLoad() {
                const value = 40 + Math.round(Math.random() * 30);
                bar.style.width = value + "%";

                if (value < 50) label.textContent = "Stable";
                else if (value < 65) label.textContent = "Busy";
                else label.textContent = "High load";
            }

            updateLoad();
            setInterval(updateLoad, 3000);
        })();
    </script>
}
