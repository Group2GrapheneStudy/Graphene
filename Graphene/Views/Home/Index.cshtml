@using System.Linq
@{
    ViewData["Title"] = "Home";

    // Safe casts with fallbacks so the view never crashes
    var roleTiles = ViewBag.RoleTiles as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    var notifications = ViewBag.Notifications as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<div class="container mt-4">

    <!-- HERO SECTION -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold mb-3">Graphene Trace Monitoring</h1>
            <p class="lead text-muted">
                Welcome to the Sensore monitoring platform. Use this portal to manage
                patient pressure data, monitor alerts, and generate clinical reports.
            </p>
            <a href="/Account/Login" class="btn btn-primary btn-lg me-2">Login</a>
            <a href="#overview" class="btn btn-outline-secondary btn-lg">System Overview</a>
        </div>
        <div class="col-lg-4 d-flex align-items-center justify-content-lg-end mt-3 mt-lg-0">
            <div class="card shadow-sm border-0 w-100">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Quick Stats</h5>
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Patients</span>
                        <span class="fw-bold text-success">@ViewBag.TotalPatients</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Clinicians</span>
                        <span class="fw-bold text-info">@ViewBag.TotalClinicians</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Admins</span>
                        <span class="fw-bold text-danger">@ViewBag.TotalAdmins</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Active Alerts</span>
                        <span class="fw-bold text-warning">@ViewBag.TotalAlerts</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ROLE TILES -->
    <section id="overview" class="mb-4">
        <h3 class="fw-bold mb-3">Choose your portal</h3>
        <p class="text-muted mb-3">
            Depending on your role, you can access different areas of the system.
        </p>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title fw-bold mb-0">Patient Portal</h5>
                            <span class="badge bg-secondary">Patients</span>
                        </div>
                        <p class="card-text text-muted flex-grow-1">
                            View your pressure heatmaps, alerts and comments.
                        </p>
                        <a href="/Account/Login?role=Patient" class="btn btn-outline-primary mt-2">
                            Login as Patient
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title fw-bold mb-0">Clinician Portal</h5>
                            <span class="badge bg-secondary">Clinicians</span>
                        </div>
                        <p class="card-text text-muted flex-grow-1">
                            Review patient data, alerts and generate reports.
                        </p>
                        <a href="/Account/Login?role=Clinician" class="btn btn-outline-primary mt-2">
                            Login as Clinician
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title fw-bold mb-0">Admin Portal</h5>
                            <span class="badge bg-secondary">Admins</span>
                        </div>
                        <p class="card-text text-muted flex-grow-1">
                            Manage user accounts, roles and system health.
                        </p>
                        <a href="/Account/Login?role=Admin" class="btn btn-outline-primary mt-2">
                            Login as Admin
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- RECENT ACTIVITY / NOTIFICATIONS -->
    <section class="mt-4">
        <h3 class="fw-bold mb-3">Recent Activity</h3>

        @if (notifications.Any())
        {
            <ul class="list-group">
                @foreach (var item in notifications)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@item.Message</span>
                        <span class="text-muted">@item.Time</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No recent activity to display.</p>
        }
    </section>

</div>
